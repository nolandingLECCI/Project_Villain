.options-bar--default {
    position: absolute;
    top: auto;
    right: 0;
    align-items: center;
    justify-content: flex-end;
    width: 770px;
    height: 110px;
    left: auto;
    bottom: auto;
    color: rgba(255, 255, 255, 255);
}

.options-bar--home {
    position: absolute;
    left: -50%;
    align-items: center;
    width: 770px;
    height: 110px;
    color: rgba(255, 255, 255, 255);
}
